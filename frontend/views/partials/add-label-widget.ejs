<div id="add-label-widget">
    <p>Добавить метку</p>
    <form id="add-label-form">
        <div id="label-info">
            <label> Название </label>
            <input
                type="text"
                id="labelName"
                name="labelName"
                required
                autocomplete="off"
            />
            <label> Цвет </label>
            <select id="labelColor" name="labelColor">
                <option value="#4d9de0">Голубой</option>
                <option value="#e15554">Красный</option>
                <option value="#e1bc29">Желтый</option>
                <option value="#3bb273">Зеленый</option>
                <option value="#7768ae">Фиолетовый</option>
            </select>
        </div>

        <hr />
        <div id="add-label-buttons">
            <button id="close-label-widget">Отмена</button>
            <button type="submit" id="add-label-button">Добавить метку</button>
        </div>
    </form>
</div>
