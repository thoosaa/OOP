<dialog class="modal" id="change-task-modal">
    <h2>Редактировать задачу</h2>
    <form id="change-task-form">
        <div class="task-info">
            <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Название задачи"
                autocomplete="off"
            />
            <input
                type="text"
                id="description"
                name="description"
                placeholder="Описание"
                autocomplete="off"
            />
        </div>

        <div class="task-params">
            <div>
                <label for="deadline">Срок выполнения</label>
                <input
                    type="date"
                    id="deadline"
                    name="deadline"
                    required
                    onkeydown="return false"
                />
            </div>

            <div>
                <label for="notification">Напоминание</label>
                <input
                    placeholder="Напоминание"
                    type="datetime-local"
                    id="notification"
                    onkeydown="return false"
                />
            </div>

            <div>
                <label for="priority">Приоритет</label>
                <select id="priority" name="priority">
                    <option value="1">Приоритет 1</option>
                    <option value="2">Приоритет 2</option>
                    <option value="3">Приоритет 3</option>
                    <option value="4">Приоритет 4</option>
                </select>
            </div>

            <div>
                <label for="label">Метка:</label>
                <select id="label" name="label"></select>
            </div>
        </div>

        <hr />
        <div class="task-widget-footer">
            <select id="project" name="project">
                <option value="inbox">Входящие</option>
            </select>
            <div id="change-buttons">
                <button id="close-change-task" class="close">Отмена</button>
                <button type="submit" id="change-task-button">
                    Редактировать задачу
                </button>
            </div>
        </div>
    </form>
</dialog>
