<div id="change-task-widget">
    <h2>Редактировать задачу</h2>
    <form id="add-task-form">
        <div class="task-info">
            <input
                type="text"
                id="newTaskName"
                name="newTaskName"
                required
                placeholder="Название задачи"
                autocomplete="off"
            />
            <input
                type="text"
                id="newDescription"
                name="newDescription"
                placeholder="Описание"
                autocomplete="off"
            />
        </div>

        <div class="task-params">
            <input
                placeholder="Срок выполнения"
                type="text"
                onfocus="(this.type='date')"
                onblur="(this.type='text')"
                id="newDeadline"
                required
            />
            <input
                placeholder="Напоминание"
                type="text"
                onfocus="(this.type='datetime-local')"
                onblur="(this.type='text')"
                id="newNotification"
            />
            <select id="newPriority" name="priority">
                <option value="1">Приоритет 1</option>
                <option value="2">Приоритет 2</option>
                <option value="3">Приоритет 3</option>
                <option value="4">Приоритет 4</option>
            </select>

            <select id="newLabel" name="label"></select>
        </div>

        <hr />
        <div class="task-widget-footer">
            <select id="newProject" name="newProject">
                <option value="inbox">Входящие</option>
            </select>
            <div class="add-buttons">
                <button id="close-task-change-widget">Отмена</button>
                <button type="submit" id="change-task-button">
                    Добавить задачу
                </button>
            </div>
        </div>
    </form>
</div>
